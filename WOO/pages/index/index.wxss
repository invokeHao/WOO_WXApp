  border-bottom-left-radius: 10rpx;
  border-bottom-right-radius: 10rpx;

  font-size:29rpx;
  font-family:FZLANTY_XIANJW--GB1-0;
  font-weight:normal;
  color:rgba(23,31,36,1);
  line-height:38rpx;
  letter-spacing:2rpx;
  box-sizing: border-box;
}
.flex-item2 {
  position: relative;
  margin-top: 20rpx;
