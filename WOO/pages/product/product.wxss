image {
  display: block;
  width: 100%;
  height: 654rpx;
}
.img-wrap {
  position: relative;
}
.scroll-view {
  background: #f2f2f2;
}
.product {
  margin: 20rpx auto;
  background:#fff;
  box-shadow:0px 4rpx 7rpx 0px rgba(0,0,0,0.1);
  border-radius:33rpx;
  overflow: hidden;
  box-sizing: border-box;
}
.product_profile {
  position: relative;
  width: 688rpx;
  height: 850rpx;
}
.product_buy {
  padding: 120rpx 67rpx 49rpx 65rpx;
  width:678rpx;
  height:529rpx;
}
.text-wrap {
  padding: 38rpx 56rpx 42rpx;
  font-size:43rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(34,34,34,1);
  line-height:60rpx;
  letter-spacing:4rpx;
  text-shadow:0px 7rpx 22rpx rgba(0,0,0,0.15);
}
.flex {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.refund {
  font-size:33rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(79,79,79,1);
  line-height:45rpx;
  letter-spacing:2rpx;
}
.price {
  margin: 0 10rpx;
  font-size: 40rpx;
}
.attention {
  font-size:22rpx;
  font-family:PingFangSC-Semibold;
  font-weight:600;
  color:rgba(134,134,134,1);
  line-height:31prx;
  letter-spacing:4rpx;
}
.slide {
  width: 90%;
  margin: 70rpx auto;
}
.btn-wrap {
  margin: 0 auto;
  width: 504rpx;
  height: 94rpx;
  border-radius: 94rpx;
  overflow: hidden;
  box-shadow:0px 27px 36px 0px rgba(0,0,0,0.1);
}
.btn {
  font-size:24rpx;
  font-family:PingFangSC-Semibold;
  font-weight:600;
  line-height:94rpx;
  letter-spacing:2rpx;
  width: 50%;
  height: 94rpx;
  color: #fff;
}
.shop_bag_btn {
  background: #333;
}
.use_now_btn {
  background: #B3E220;
}
.original_price {
  position: absolute;
  bottom: 36rpx;
  left: 45rpx;
  font-size:58rpx;
  font-family:PingFangSC-Semibold;
  font-weight:600;
  color:#fff;
  line-height:58rpx;
  letter-spacing:2rpx;
}
.layer {
  border-top-left-radius: 33rpx;
  border-top-right-radius: 33rpx;
}
.detail {
  position: absolute;
  bottom: 34rpx;
  right: 40rpx;
  width:123rpx;
  height:49rpx;
  background:#fff;
  box-shadow:0px 7rpx 7rpx 0px rgba(0,0,0,0.1);
  border-radius:24rpx;

  font-size:22rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(51,51,51,1);
  line-height:49rpx;
  letter-spacing:4rpx;
  text-align: center;
}